// tsconfig.json
{
  "include": ["./src/**/*"],
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules", "public", ".cache"]
}
